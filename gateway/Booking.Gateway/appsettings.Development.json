{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "identity": {
        "ClusterId": "identityCluster",
        "Match": {
          "Path": "/identity/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/identity" }
        ]
      },      
      "hotel": {
        "ClusterId": "hotelCluster",
        "Match": {
          "Path": "/hotel/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/hotel" }
        ]
      },
      "profile": {
        "ClusterId": "profileCluster",
        "Match": {
          "Path": "/profile/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/profile" }
        ]
      },
      "keycloak": {
        "ClusterId": "keycloakCluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/auth" }
        ]
      }
    },
    "Clusters": {
      "identityCluster": {
        "Destinations": {
          "d1": {
            "Address": "http://identity.api:5000/"
          }
        }
      },
      "hotelCluster": {
        "Destinations": {
          "d1": {
            "Address": "http://hotel-catalog.api:5001/"
          }
        }
      },
      "profileCluster": {
        "Destinations": {
          "d1": {
            "Address": "http://profile.api:5002/"
          }
        }
      },
      "keycloakCluster": {
        "Destinations": {
          "d1": {
            "Address": "http://keycloak:8080/"
          }
        }
      }
    }
  }
}
